<?xml version="1.0" encoding="UTF-8"?>
<templates>
        <t t-extend="ClientListScreenWidget" t-operation="replace">
            <t t-jquery=".clientlist-screen .client-list thead tr" t-operation="append">
                <th>Payment Term</th>
            </t>
        </t>
        <t t-extend="ClientLine" t-operation="replace">
            <t t-jquery=".client-line" t-operation="append">    
                <t t-if="partner.property_payment_term != False">
                    <td><t t-esc="partner.property_payment_term[1]" /></td>
                </t>
                <t t-if="partner.property_payment_term == False">
                    <td><t t-esc="N/A" /></td>
                </t>
            </t>
        </t>
</templates>